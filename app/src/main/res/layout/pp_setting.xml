<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:divider="@drawable/divider_line"
        android:showDividers="middle">
    <LinearLayout android:gravity="center_vertical"
                  android:id="@+id/pp_setting_root"
                  android:orientation="horizontal"
                  android:paddingLeft="20dp"
                  android:visibility="visible"
                  android:clickable="true"
                  android:layout_width="match_parent"
                  android:layout_height="44dp">
        <TextView android:textSize="14dp"



                  android:textColor="#333333"
                  android:id="@+id/pp_setting_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="皮皮助手"
                  android:layout_centerVertical="true"/>
        <TextView android:textSize="12dp"
                  android:textColor="#999999"
                  android:gravity="right"
                  android:id="@+id/pp_setting_version"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1.0.0"
                  android:layout_weight="1"/>
        <ImageView android:paddingStart="9dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="20dp"
                   android:src="@mipmap/icon_arrow_right"
                   android:id="@+id/pp_setting_arrow"
                   android:contentDescription="image"
                   android:layout_marginEnd="20dp"/>
    </LinearLayout>
</LinearLayout>
